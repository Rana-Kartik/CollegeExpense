<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Manager</title>

       <!-- CSS Link  -->
       <link href="/styles/styles.css" rel="stylesheet" />

            <!-- Font Awesome -->
        <link
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        rel="stylesheet"
        />
        <!-- Google Fonts -->
        <link
        href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
        rel="stylesheet"
        />
        <!-- MDB -->
        <link
        href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.css"
        rel="stylesheet"
        />

        <!-- MDB -->
        <script
        type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.js"
        ></script>


</head>

<body>

    <!-- Section: Design Block -->
<section class="gradient-form">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%);  height: 100vh;">
      <div class="container" style="margin-top: 9%;" >
        <div class="row gx-lg-5 align-items-center">

          <div class="col-lg-6 mb-5 mb-lg-0">
            <h1 class="my-5 display-3 fw-bold ls-tight">
              Welcome To Expense <br />
              <span class="text-primary">Manager</span>
            </h1>
            <p style="color: hsl(217, 10%, 50.8%);">
            </p>
          </div>
  
          <div class="col-lg-6 mb-5 mb-lg-0" method="post" action="/user/signup">
            <div class="card">
                <h3 class="d-flex justify-content-center">Sign up</h3>
              <div class="card-body py-5 px-md-5">
                <form method="post" action="/user/signup">
                 
                <div class="form-outline mb-4">
                    <label class="form-label">Username</label>
                    <input type="text"  class="form-control border" name="userName"  placeholder="enter the username" required/>
                </div>
  
                  <!-- Email input -->
                  <div class="form-outline mb-4">
                    <label class="form-label">Email</label>
                    <input type="email" id="form2Example2" class="form-control border" name="email"  placeholder="enter the email" required/>
                  </div>
  
                  <!-- Password input -->
                  <div class="form-outline mb-4">
                    <label class="form-label">Password</label>
                    <input type="password" id="form2Example3" class="form-control border"  minlength="8" name="password" placeholder="enter the password" required/>
                   
                  </div>
  
                  <!-- Submit button -->
                 
                   <a href="/conformation" class="text-white"> 
                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>
                   </a> 
                  </button>
                </form>

                <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2">Already have an account?</p>
                    <a type="button" class="btn btn-outline-primary" href='/'
                    >Login</a>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Jumbotron -->
  </section>
  <!-- Section: Design Block -->


</body>

</html>